<!-- 				<message-body>com.snail.webgame.engine.component.mail.protocal.chat.status.ChatStatusReq</message-body> -->
<!-- 				<processor value="com.snail.webgame.engine.component.mail.protocal.chat.status.ChatStatusProcessor"> -->
